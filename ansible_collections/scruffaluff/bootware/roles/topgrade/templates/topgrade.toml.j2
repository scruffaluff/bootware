# Topgrade configuration file for updating system packages.
#
# For more infomation, visit
# https://github.com/topgrade-rs/topgrade/blob/main/config.example.toml.

[brew]
greedy_cask = true

[misc]
assume_yes = true
{% if ansible_system in ["Darwin", "Win32NT"] %}
disable = ["certbot", "containers", "gem", "git_repos", "helm", "ruby_gems", "system", "uv"]
{% else %}
disable = ["certbot", "containers", "gem", "git_repos", "helm", "ruby_gems", "uv"]
{% endif %}
no_retry = true
no_self_update = true
notify_each_step = false
skip_notify = true
